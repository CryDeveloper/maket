<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="heading_text">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_85</item>
        <item name="android:textSize">48dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="heading_text_2">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white_85</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="red_subtitle">
        <item name="android:textAlignment">textStart</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">36dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:layout_marginStart">30dp</item>
    </style>
    
    <style name="gray_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/gray_85</item>
    </style>

    <style name="thin_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_thin</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="main_bold_text">
        <item name="android:textAlignment">center</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textColor">@color/white_85</item>
    </style>

    <style name="main_text_in_table">
        <item name="android:textAlignment">textStart</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:textColor">@color/white_85</item>
        <item name="android:textSize">14dp</item>
        <item name="android:layout_marginStart">30dp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>
</resources>